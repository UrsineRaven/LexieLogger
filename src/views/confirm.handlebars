<!-- views/confirm.handlebars -->
<h2 class="mt-3 text-danger">Are you sure you want to delete this {{type}}?</h2>
{{#ifCond type "==" "event"}}
  <table class="table">
    <thead>
      <tr>
	<th scope="col">ID</th>
	<th scope="col">Date</th>
	<th scope="col">Time</th>
	<th scope="col">Event</th>
      </tr>
    </thead>
    <tbody>
      <tr class="table-warning">
	<td>{{object.id}}</td>
	<td>{{object.date}}</td>
	<td>{{object.time}}</td>
	<td>{{object.type.name}}</td>
      </tr>
    </tbody>
  </table>
{{else}}
  <table class="table">
    <thead>
      <tr>
	<th scope="col">ID</th>
	<th scope="col">Name</th>
	<th scope="col">Formatting</th>
      </tr>
    </thead>
    <tbody>
      <tr class="table-warning">
	<td>{{object.id}}</td>
	<td>{{object.name}}</td>
	<td>{{object.formatting}}</td>
      </tr>
    </tbody>
  </table>
{{/ifCond}}

<div class="mt-3 row justify-content-around">
  <!-- TODO: add conditional button for deleting an Event Type -->
  <a type="button" class="btn btn-danger col-md-3 col-5" href="/del-event/{{object.id}}">Yes</a>
  <a type="button" class="btn btn-primary col-md-3 col-5" href="/">No</a>
</div>
